@using DaliCMS.Models
@model Account
@{
    ViewBag.Title = "Iniciar sesión";
}

<h1_special class="text-center"><b>@ViewBag.Title</b></h1_special>
<br />
<br />
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.Label("Nombre de usuario", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <kbd>@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })</kbd>
                        <br />
                        <kbd><b>@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })</b></kbd>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Contraseña", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <kbd>@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</kbd>
                        <br />
                        <kbd><b>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</b></kbd>
                        <kbd><b>@Html.ValidationMessage("Login", new { @class = "text-danger" })</b></kbd>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Iniciar sesión" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    <br />
                    <i>No tiene una cuenta? @Html.ActionLink("Regístrese aquí", "Register")</i>
                </p>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}