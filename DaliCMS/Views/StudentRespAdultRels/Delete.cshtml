@model DaliCMS.Models.StudentRespAdultRel

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Account/Login/");
    }
}

<h1_special class="text-center"><b>Eliminar relación</b></h1_special>
<h3>Está seguro de querer eliminar esta relación?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del alumno
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentModel.Name)
        </dd>
        <dt>
            Nombre del adulto responsable
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResponsibleAdultModel.Name)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default btn-sm btn-danger" /> 
            @Html.ActionLink("Volver a la lista de relaciones", "Index", null, new { @class = "btn btn-primary btn-sm" })
        </div>
    }
</div>
