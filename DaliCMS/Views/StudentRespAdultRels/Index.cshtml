@model IPagedList<DaliCMS.Models.StudentRespAdultRel>

@{
    ViewBag.Title = "Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Account/Login/");
    }
}

<h1_special class="text-center"><b>Alumnos/Adultos responsables</b></h1_special>
<br />
<p>
    @Html.ActionLink("Agregar nueva relación", "Create", null, new { @class = "btn btn-main-dali" })
</p>
<table class="table">
    <tr>
        <th>
            Nombre del Adulto responsable
        </th>
        <th>
            Nombre del Alumno
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ResponsibleAdultModel.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentModel.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-success btn-sm" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
<div class="pager">@Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o.DisplayTemplate("Pagination"))</div>