@model DaliCMS.Models.Level

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Account/Login/");
    }
}

<h1_special class="text-center"><b>Detalles del nivel</b></h1_special>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Precio base
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BasePrice)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-success btn-sm" })
    @Html.ActionLink("Volver a la lista de niveles", "Index", null, new { @class = "btn btn-primary btn-sm" })
</p>
